# Supabase (database – no Prisma)
# Dashboard → Project Settings → API: Project URL and service_role secret (never expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Auth.js / NextAuth (JWT sessions)
# Set ALLOW_DEMO=true to enable "Try demo" without Google. When demo is enabled, Google is optional.
AUTH_SECRET=generate_with_npx_auth_secret
ALLOW_DEMO=true
# Optional: omit to use demo-only auth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OpenClaw / Clawdbot gateway (HTTP API for agent provisioning and bindings)
OPENCLAW_GATEWAY_URL=https://your-gateway.example.com
OPENCLAW_GATEWAY_TOKEN=your_gateway_api_token

# WebSocket chat (client-side; set in Vercel or .env.local)
NEXT_PUBLIC_GATEWAY_WS_URL=wss://your-gateway.example.com/ws

# Telegram (claim deep link; bot username without @)
TELEGRAM_BOT_USERNAME=YourOpenClawBot
