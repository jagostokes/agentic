# Database (required for Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/agentic

# Auth.js / NextAuth (Google provider, JWT sessions)
AUTH_SECRET=generate_with_npx_auth_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OpenClaw / Clawdbot gateway (HTTP API for agent provisioning and bindings)
OPENCLAW_GATEWAY_URL=https://your-gateway.example.com
OPENCLAW_GATEWAY_TOKEN=your_gateway_api_token

# WebSocket chat (client-side; set in Vercel or .env.local)
NEXT_PUBLIC_GATEWAY_WS_URL=wss://your-gateway.example.com/ws

# Telegram (claim deep link; bot username without @)
TELEGRAM_BOT_USERNAME=YourOpenClawBot
